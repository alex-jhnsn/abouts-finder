{
    "name": "All Abouts Finder",
    "description": "Find and copy all about links to add to your stories.",
    "version": "2.0",
    "homepage_url": "https://github.com/alex-jhnsn/abouts-finder",
    "manifest_version": 3,
    "options_page": "options.html",
    "background": {
        "service_worker": "background.bundle.js"
    },
    "permissions": ["scripting", "storage", "unlimitedStorage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*",
                "<all_urls>"
            ],
            "js": [
                "contentScript.bundle.js"
            ],
            "css": [
                "content.styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.styles.css",
                "icon-128.png",
                "icon-34.png"
            ],
            "matches": []
        }
    ]
}